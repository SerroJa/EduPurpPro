FROM node:10.15.3-alpine 
MAINTAINER Serroha
RUN mkdir -p /usr/src/app/
WORKDIR /usr/src/app/
COPY package.json package-lock.json /usr/src/app/

RUN npm install -g sails
RUN npm install
COPY . /usr/src/app/

ENTRYPOINT ["node"]
CMD ["app.js"]
EXPOSE 1337
#LABEL che:server:1337:ref=sails che:server:1337:protocol=http
 